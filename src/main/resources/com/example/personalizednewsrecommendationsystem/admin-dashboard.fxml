<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personalizednewsrecommendationsystem.AdminDashboard">

   <VBox id="background" layoutX="10" layoutY="10" prefHeight="580" prefWidth="780" spacing="10" stylesheets="@CSS/main.css">
      <Label style="-fx-font-size: 24px;" text="Admin Dashboard" />

      <HBox spacing="10">
         <Button onAction="#onRefreshClick" text="Refresh" />
      </HBox>


      <HBox spacing="10">
         <Label style="-fx-font-size: 18px;" text="News Articles" />
         <Button onAction="#onAddArticleClick" text="Add Article" />
         <Button onAction="#onUpdateArticleClick" text="Update Article" />
         <Button onAction="#onDeleteArticleClick" text="Delete Article" />
      </HBox>

      <TableView fx:id="newsTable" prefHeight="200">
         <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" />
            <TableColumn fx:id="colCategory" prefWidth="100" text="Category" />
            <TableColumn fx:id="colTitle" prefWidth="300" text="Title" />
            <TableColumn fx:id="colContent" prefWidth="300" text="Content" />
         </columns>
      </TableView>

      <HBox layoutY="220" spacing="10">
         <Label style="-fx-font-size: 18px;" text="Users" />
         <Button onAction="#onAddUserClick" text="Add User" />
         <Button onAction="#onDeleteUserClick" text="Delete User" />
      </HBox>

      <TableView fx:id="usersTable" prefHeight="200">
         <columns>
            <TableColumn fx:id="colUsername" prefWidth="200" text="Username" />
            <TableColumn fx:id="colEmail" prefWidth="300" text="Email" />
         </columns>
      </TableView>

      <Button layoutX="10" layoutY="520" onAction="#onLogoutClick" style="-fx-font-size: 16px;" text="Logout" />
   </VBox>
</AnchorPane>
