<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.personalizednewsrecommendationsystem.AdminDashboard"
            prefHeight="600.0" prefWidth="800.0">

   <VBox spacing="10" layoutX="10" layoutY="10" prefWidth="780" prefHeight="580">
      <Label text="Admin Dashboard" style="-fx-font-size: 24px;"/>

      <HBox spacing="10">
         <Button text="Refresh" onAction="#onRefreshClick"/>
      </HBox>


      <HBox spacing="10">
         <Label text="News Articles" style="-fx-font-size: 18px;"/>
         <Button text="Add Article" onAction="#onAddArticleClick"/>
         <Button text="Update Article" onAction="#onUpdateArticleClick"/>
         <Button text="Delete Article" onAction="#onDeleteArticleClick"/>
      </HBox>

      <TableView fx:id="newsTable" prefHeight="200">
         <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="50"/>
            <TableColumn text="Category" fx:id="colCategory" prefWidth="100"/>
            <TableColumn text="Title" fx:id="colTitle" prefWidth="300"/>
            <TableColumn text="Content" fx:id="colContent" prefWidth="300"/>
         </columns>
      </TableView>

      <HBox spacing="10" layoutY="220">
         <Label text="Users" style="-fx-font-size: 18px;"/>
         <Button text="Add User" onAction="#onAddUserClick"/>
         <Button text="Delete User" onAction="#onDeleteUserClick"/>
      </HBox>

      <TableView fx:id="usersTable" prefHeight="200">
         <columns>
            <TableColumn text="Username" fx:id="colUsername" prefWidth="200"/>
            <TableColumn text="Email" fx:id="colEmail" prefWidth="300"/>
         </columns>
      </TableView>

      <Button text="Logout" onAction="#onLogoutClick" layoutX="10" layoutY="520" style="-fx-font-size: 16px;"/>
   </VBox>
</AnchorPane>
