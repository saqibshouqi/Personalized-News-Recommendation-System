<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="background" prefHeight="400.0" prefWidth="600.0" stylesheets="@CSS/main.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.personalizednewsrecommendationsystem.ViewSelectedArticle">
<children>
    <Label fx:id="articleTitleLabel" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="categoryLabel" layoutX="20.0" layoutY="50.0" style="-fx-font-size: 14px;" />
    <TextArea fx:id="contentArea" editable="false" layoutX="20.0" layoutY="80.0" prefHeight="200.0" prefWidth="560.0" />
    <Button fx:id="likeButton" layoutX="100.0" layoutY="300.0" onAction="#onLikeClick" text="Like" />
    <Button fx:id="dislikeButton" layoutX="200.0" layoutY="300.0" onAction="#onDislikeClick" text="Dislike" />
    <Button fx:id="saveButton" layoutX="300.0" layoutY="300.0" onAction="#onSaveClick" text="Save" />
</children>
</AnchorPane>
