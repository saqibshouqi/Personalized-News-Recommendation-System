<VBox layoutX="100" layoutY="50" spacing="10">
    <TextField fx:id="titleField" promptText="Title" />
    <TextArea fx:id="contentField" prefHeight="200" promptText="Content" />
    <Button onAction="#onSubmitClick" text="Submit" />
</VBox>
</AnchorPane>
