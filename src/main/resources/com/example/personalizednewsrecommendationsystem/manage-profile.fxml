<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="background" prefHeight="400.0" prefWidth="600.0" stylesheets="@CSS/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personalizednewsrecommendationsystem.ManageProfile">
<children>
    <Label layoutX="20" layoutY="20" text="Username:" />
    <TextField fx:id="usernameField" editable="false" layoutX="100" layoutY="20" />

    <Label layoutX="20" layoutY="60" text="Email:" />
    <TextField fx:id="emailField" editable="false" layoutX="100" layoutY="60" />

    <Button layoutX="100" layoutY="100" onAction="#onUpdatePasswordClick" text="Update Password" />

    <Label layoutX="20" layoutY="180" text="Saved Articles:" />
    <ListView fx:id="savedArticlesList" layoutX="100" layoutY="180" prefHeight="200" prefWidth="400" />

    <Button layoutX="350" layoutY="100" onAction="#onViewArticleClick" text="View Selected Article" />
</children>
</AnchorPane>
